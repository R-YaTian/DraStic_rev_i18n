<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:id="@id/checkbox_checked" android:drawable="@drawable/btn_on" />
    <item android:state_checked="false" android:id="@id/checkbox_unchecked" android:drawable="@drawable/btn_off" />
    <transition android:toId="@id/checkbox_checked" android:fromId="@id/checkbox_unchecked">
        <animation-list>
            <item android:duration="20" android:drawable="@drawable/btn_off_1" />
            <item android:duration="20" android:drawable="@drawable/btn_off_2" />
            <item android:duration="20" android:drawable="@drawable/btn_off_3" />
            <item android:duration="20" android:drawable="@drawable/btn_off_4" />
            <item android:duration="20" android:drawable="@drawable/btn_on_center" />
            <item android:duration="20" android:drawable="@drawable/btn_on_4" />
            <item android:duration="20" android:drawable="@drawable/btn_on_3" />
            <item android:duration="20" android:drawable="@drawable/btn_on_2" />
            <item android:duration="20" android:drawable="@drawable/btn_on_1" />
        </animation-list>
    </transition>
    <transition android:toId="@id/checkbox_unchecked" android:fromId="@id/checkbox_checked">
        <animation-list>
            <item android:duration="20" android:drawable="@drawable/btn_on_1" />
            <item android:duration="20" android:drawable="@drawable/btn_on_2" />
            <item android:duration="20" android:drawable="@drawable/btn_on_3" />
            <item android:duration="20" android:drawable="@drawable/btn_on_4" />
            <item android:duration="20" android:drawable="@drawable/btn_off_center" />
            <item android:duration="20" android:drawable="@drawable/btn_off_4" />
            <item android:duration="20" android:drawable="@drawable/btn_off_3" />
            <item android:duration="20" android:drawable="@drawable/btn_off_2" />
            <item android:duration="20" android:drawable="@drawable/btn_off_1" />
        </animation-list>
    </transition>
</animated-selector>
